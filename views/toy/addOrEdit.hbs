<h1 style="bold">{{viewTitle}}</h1>
<form action="/toy" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{toy._id}}">
    <div class="form-group">
        <label>Toy name:</label>
        <input type="text" class="form-control" name="fullName" value="{{toy.fullName}}" placeholder="Input name of toy">
        <div class="text-danger">
            {{toy.fullNameError}}
        </div>
    </div>
    <div class="form-group">
        <label>Price:</label>
        <input type="text" class="form-control" name="email" value="{{toy.email}}" placeholder="Input price of toy">
        <div class="text-danger">
            {{toy.emailError}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group md-6">
            <label>Description:</label>
            <input type="text" name="mobile" placeholder="Input description of toy" value="{{toy.mobile}}" class="form-control">

        </div>
        <div class="form-group md-6">
            <label>Amount:</label>
            <input type="text" name="city" placeholder="Input amount of toy" value="{{toy.city}}" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success"><i class="fa fa-database"> Submit</i></button>
        <a href="/toy/list" class="btn btn-danger">
            <i class="fa fa-list-alt"> View All</i >
        </a>
    </div>
</form>